@{
}

<div class="text-center">
    <h1 class="display-9">Thống Kê Số Lượng Sản Phẩm Hết Hạn</h1>
</div>

<form method="post">
  <label for="fname">Nhập tên sản phẩm cần tìm:</label><br>
  <input type="text" id="khongquantrong" name="TuKhoa" value=""><br>
  <input type="submit" value="Tìm Kiếm">
</form> 


<div> 
    <table>
        <tr>
            <th>Mã Sản Phẩm</th>
            <th>Tên Sản phẩm</th>
            <th>Hạn Sử Dụng</th>
        </tr>
        @foreach (SanPham sp in Model.DanhSachSanPhamQuaHan)
        {
            <tr>
                <td>@sp.MaSanPham</td>
                <td>@sp.TenSanPham</td>
                <td>@sp.HanSuDung</td>
            </tr>
        }
    </table>
</div>


@Model.Chuoi

