@page
@using LTHDT_2023_12_Entities
@model LTHDT_2023_12_WEB.Pages.Pages_HoaDonBanHang.MH_DanhSach_HoaDonBanHangModel
@{
}

<div class="text-center">
    <h1 class="display-9">Hoá Đơn Bán Hàng</h1>
</div>

<div>
    <a href="MH_Them_HoaDonBanHang">Thêm Hoá Đơn Bán Hàng</a>
</div>

<form method="post">
  <label for="fname">Nhập mã hoá đơn cần tìm:</label><br>
  <input type="text" id="khongquantrong" name="maHoaDon" value=""><br>
  <input type="submit" value="Tìm Kiếm">
</form> 

<div> 
    <table>
        <tr>
            <th>Mã Hoá Đơn</th>
            <th>Mã Sản Phẩm</th>
            <th>Tên Sản Phẩm</th>
            <th>Giá Sản Phẩm</th>
            <th>Tên Người Mua</th>
            <th>Số Lượng Mua</th>
            <th>Thành Tiền</th>
            <th>Xoá</th> <!-- Thêm cột mới cho nút "Xoá" -->
            <th>Sửa</th> <!-- Thêm cột mới cho nút "Sửa" -->
        </tr>
        @foreach (HoaDonBanHang hd in Model.DanhSachHoaDonBanHang)
        {
            <tr>
                <td>@hd.MaHoaDon</td>
                <td>@hd.sanPham.MaSanPham</td>
                <td>@hd.sanPham.TenSanPham</td>
                <td>@hd.sanPham.Gia</td>
                <td>@hd.TenNguoiMua</td>
                <td>@hd.SoLuongMua</td>
                <td>@hd.ThanhTien</td>
               <td>
                    <!-- Thêm nút "Xoá" với đường dẫn đến trang MH_Xoa_SanPham và truyền mã sản phẩm -->
                    <a href="MH_Xoa_HoaDonBanHang?maHoaDonInput=@hd.MaHoaDon">Xoá</a>
                </td>
                <td>
                    <!-- Thêm nút "Sửa" với đường dẫn đến trang MH_Sua_SanPham và truyền mã sản phẩm -->
                    <a href="MH_SuaHoaDonBanHang?maHoaDonInput=@hd.MaHoaDon">Sửa</a>
                </td>
            </tr>
        }
    </table>
</div>

@Model.Chuoi

<div>
    <a href="/Privacy">Danh sách các Page</a>
</div>