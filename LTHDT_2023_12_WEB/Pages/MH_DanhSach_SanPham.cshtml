@page
@model LTHDT_2023_12_WEB.Pages.MH_DanhSach_SanPhamModel
@using LTHDT_2023_12_Entities
@{
}
<div class="text-center">
    <h1 class="display-9">Danh Sách Sản Phẩm </h1>
</div>
<form method="post">
  <label for="fname">Nhập tên sản phẩm cần tìm:</label><br>
  <input type="text" id="khongquantrong" name="TuKhoa" value=""><br>
  <input type="submit" value="Tìm Kiếm">
</form> 

<div>
    <a href="MH_Them_SanPham">Thêm Sản Phẩm</a>
</div>

<div> 
    <table>
        <tr>
            <th>Ma San Pham</th>
            <th>Ten</th>
            <th>Gia</th>
            <th>Hạn Sử Dụng</th>
            <th>Công Ty Sản Xuất</th>
            <th>Năm Sản Xuất</th>
            <th>Loại Sản Phẩm</th>
            <th>Số Lượng</th>
            <th>Xoá</th> <!-- Thêm cột mới cho nút "Xoá" -->
            <th>Sửa</th> <!-- Thêm cột mới cho nút "Sửa" -->
        </tr>
        @foreach (SanPham sp in Model.DanhSachSanPham)
        {
            <tr>
                <td>@sp.MaSanPham</td>
                <td>@sp.TenSanPham</td>
                <td>@sp.Gia</td>
                <td>@sp.HanSuDung</td>
                <td>@sp.CongTySanXuat</td>
                <td>@sp.NamSanXuat</td>
                <td>@sp.LoaiSanPham</td>
                <td>@sp.SoLuong</td>
                <td>
                    <!-- Thêm nút "Xoá" với đường dẫn đến trang MH_Xoa_SanPham và truyền mã sản phẩm -->
                    <a href="MH_Xoa_SanPham?maSanPhamInput=@sp.MaSanPham&TuKhoa=@sp.TenSanPham">Xoá</a>
                </td>
                <td>
                    <!-- Thêm nút "Sửa" với đường dẫn đến trang MH_Sua_SanPham và truyền mã sản phẩm -->
                    <a href="MH_Sua_SanPham?maSanPhamInput=@sp.MaSanPham&TuKhoa=@sp.TenSanPham">Sửa</a>
                </td>
            </tr>
        }
    </table>
</div>


@Model.Chuoi
<div>
    <a href="/Pages_ThongKe/ThongKeSoLuongSanPham">Thống Kê Số Lượng Sản Phẩm</a>
</div>
<div>
    <a href="/Pages_ThongKe/ThongKeSoLuongSanPhamHetHan">Thống Kê Số Lượng Sản Phẩm Hết Hạn</a>
</div>
<div>
    <a href="/Privacy">Danh sách các Page</a>
</div>

